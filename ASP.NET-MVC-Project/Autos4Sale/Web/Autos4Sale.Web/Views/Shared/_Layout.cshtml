<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Autos4Sale</title>
    @Styles.Render("~/Content/kendo-css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Autos4Sale", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, new { })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = string.Empty }, new { })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = string.Empty }, new { })</li>
                    <li>@Html.ActionLink("Offers", "AllCars", "Offers", new { area = string.Empty }, new { })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Upload", "Upload", "Upload", new { area = "", controller = "Home" }, new { })</li>

                        if (User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Your Offers", "YourOffers", "Offers", new { area = string.Empty }, new { })</li>
                        }
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Admin", "AllOffers", "Offers", new { area = "Administration" }, new { })</li>
                            <li>@Html.ActionLink("Manage Users", "ManageUsers", "Offers", new { area = "Administration" }, new { })</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div id="contacts">
            @RenderSection("contacts", required: false)
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Autos4Sale Web App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
